<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.easy.mapper.UserMapper">

    <!-- 查询条件   -->
    <sql id="user_where_if">
        <if test="username != null and username != '' " >
            AND username LIKE CONCAT('%',#{username},'%')
        </if>
        <if test="address != null and address != '' ">
            AND address LIKE CONCAT('%',#{address},'%')
        </if>
        <if test="email != null and email != '' ">
            AND email LIKE CONCAT('%',#{email},'%')
        </if>
    </sql>

    <!-- 响应字段   -->
    <sql id="user_columns">
        id,
        phone,
        username,
        nickname,
        address,
        email
    </sql>

    <!-- 查询所有用户   -->
    <select id="all">
        SELECT
            <include refid="user_columns" />
        FROM
            sys_user;
    </select>

    <!-- 根据条件查询用户   -->
    <select id="list" resultType="com.easy.entity.User">
        SELECT
            <include refid="user_columns"></include>
        FROM
            sys_user
        <where>
                <include refid="user_where_if"></include>
        </where>
            LIMIT #{pageNum},#{pageSize};
    </select>

    <!-- 查询总条数   -->
    <select id="total" resultType="int">
        SELECT
            COUNT(*)
        FROM
            sys_user
        <where>
            <include refid="user_where_if" />
        </where>
    </select>

    <!--  更新用户  -->
    <update id="update">
        UPDATE
            sys_user
        <set>
            <if test="username != null and username != '' ">
                username=#{username},
            </if>
            <if test="nickname != null and nickname != '' ">
                nickname=#{nickname},
            </if>
            <if test="email != null and email != '' ">
                email=#{email},
            </if>
            <if test="phone != null and phone != '' ">
                phone=#{phone},
            </if>
            <if test="address != null and address != '' ">
                address=#{address}
            </if>
        </set>
        <where>
            id=#{id}
        </where>
    </update>

    <!-- 根据id查询用户   -->
    <delete id="deleteById">
        DELETE FROM
                   sys_user
        WHERE
            id = #{id}
    </delete>

    <select id="selectUserByUsernameAndPassword" resultType="com.easy.entity.User">
        SELECT
            <include refid="user_columns" />
        FROM
            sys_user
        WHERE
            username=#{username} AND password=#{password}
    </select>
</mapper>